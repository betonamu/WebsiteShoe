@model WebsiteShoe.Entities.ShoeStyle;

@{
    ViewData["Title"] = "DeleteShoeStyle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <h1>Xóa Loại Giày</h1>
</div>
<div class="row justify-content-center">
    <h3>Bạn có chắc muốn xóa?</h3>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StyleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StyleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StyleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StyleName)
        </dd>
    </dl>
    <form action="/Admin/DeleteShoeStyleConfirm/@Model.StyleId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" asp-controller="Admin">Quay Lại</a>
    </form>
</div>