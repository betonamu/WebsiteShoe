
@{
    ViewData["Title"] = "AddShoeStyle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center mb-2">
    <h3>NHẬP SẢN LOẠI PHẨM MỚI</h3>
</div>

<div class="container-fluid">

    <form action="/Admin/AddShoeStyle" method="post">
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">
                Tên loại giày
            </label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" name="StyleName" id="colFormLabelSm">
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">
                Hãng giày
            </label>
            <div class="col-sm-10">
                <select id="slbStreet" name="ProducerId" class="form-control" asp-items="@ViewBag.Producer">
                    <option value="0">---Chọn thương hiệu---</option>
                </select>
            </div>
        </div>
        <div class="row justify-content-center">
            <input type="submit" value="Nhập loại sản phẩm" onclick="AddSuccess()" class="btn btn-success">
        </div>
    </form>
</div>

<script>
    var AddSuccess = function () {
        alert("Add san pham thanh cong");
    }
</script>