@model List<WebsiteShoe.Entities.ShoeStyle>
@using Newtonsoft.Json;
@{
    ViewData["Title"] = "ShoeStyleManagement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách loại giày</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng danh sách</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã loại</th>
                            <th>Tên loại</th>
                            <th>Hãng giày</th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@item.StyleId</td>
                                <td>@item.StyleName</td>
                                <td>@item.Producer.ProducerName</td>
                                <td>
                                    <button class="btn btn-primary" type="button">
                                        <a href="/Admin/EditShoeStyle/@item.StyleId" style="color: white;">Sửa</a>
                                    </button>
                                    <button class="btn btn-primary" type="button">
                                        <a style="color: white;" href="/Admin/DeleteShoeStyle/@item.StyleId">Xóa</a>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>

</div>

