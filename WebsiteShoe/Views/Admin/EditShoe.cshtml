@model WebsiteShoe.Entities.Shoe;
@{
    ViewData["Title"] = "EditShoe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center mb-2">
    <h3>SỬA SẢN PHẨM</h3>
</div>
<div class="container">
    <form enctype="multipart/form-data" action="/Admin/EditShoe/" method="post">
        <input name="ShoeId" type="hidden" value="@Model.ShoeId"/>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Tên giày</label>
            <div class="col-sm-10">
                <input class="form-control form-control-sm" name="ShoeName" id="colFormLabelSm" value="@Model.ShoeName" required>
                <span asp-validation-for="ShoeName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Giá</label>
            <div class="col-sm-10">
                <input type="number" name="Price" class="form-control form-control-sm" id="colFormLabelSm" value="@Model.Price" required>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Loại giày</label>
            <div class="col-sm-10">
                <select id="slbShoeStyle" name="StyleId" asp-for="StyleId" class="form-control" asp-items="@ViewBag.ShoeStyle" required>
                    <option value="">---Chọn loại sản phẩm---</option>
                </select>
                <span asp-validation-for="StyleId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm">Hình ảnh</label>
            <div class="col-sm-4">
                <input type="file" name="fileUpload">
                <img src="@Url.Content(Model.Images)" class="img-fluid">
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-sm"> Thư mục ảnh 360</label>
            <div class="col-sm-10">
                <input type="text" name="360shoes" alt="Chọn File ảnh" class="form-control form-control-sm" id="colFormLabelSm">
                <a>~/images/360shoes/"Hàng giày"/"Loại giày"/"Tên giày"/</a>
            </div>
        </div>
        <div class="row justify-content-center">
            <input type="submit" value="Luu" class="btn btn-success">
        </div>
    </form>
    <!-- 404 Error Text -->

</div>

