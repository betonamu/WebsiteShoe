@model List<WebsiteShoe.Entities.Shoe>
@{
    ViewData["Title"] = "ShoeManagement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Danh sách giày</h1>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Bảng danh sách</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Giày</th>
                            <th>Tên giày</th>
                            <th>Loại giày</th>
                            <th>Giá</th>
                            <th>Ảnh</th>
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.Count != 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@item.ShoeId</td>
                                    <td>@item.ShoeName</td>
                                    <td>@item.StyleId</td>
                                    <td>@item.Price</td>
                                    <td>
                                        <img src="@Url.Content(item.Images)" class="img-fluid" height="120" width="120" />
                                    </td>
                                    <td>
                                        <button class="btn btn-primary" type="button" style="margin: 5px">
                                            <a href="/Admin/DeleteShoe/@item.ShoeId" style="color: white;">Xóa</a>
                                        </button>
                                        <button class="btn btn-primary" type="button" style="margin: 5px;">
                                            <a href="/Admin/EditShoe/@item.ShoeId" style="color: white;">Sửa</a>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                    else
                    {
                        <tbody>
                            <tr class="justify-content-center">
                                <td colspan="7">
                                    <h2 class="text-danger">Hiện tại không có dữ liệu về các đơn hàng</h2>
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
                </div>
            </div>
        </div>

    </div>
